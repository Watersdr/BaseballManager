<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".Activities.AddEditPlayerActivity" >

    <TextView
        android:id="@+id/team1_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/first_name" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_first_name" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/team2_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/last_name" />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_last_name" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/number" />

    <EditText
        android:id="@+id/player_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_number"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/positions" />
	
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="7"
        android:rowCount="8">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="4"
            android:layout_gravity="center_horizontal"
            android:text="@string/p"/>
        
	    <CheckBox
	        android:id="@+id/chk_p"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="5"
            android:layout_marginTop="-5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="6"
            android:layout_gravity="center_horizontal"
            android:text="@string/c"/>

        <CheckBox
            android:id="@+id/chk_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="7"
            android:layout_marginTop="-5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="4"
            android:layout_gravity="center_horizontal"
            android:text="@string/_1b"/>

        <CheckBox
            android:id="@+id/chk_1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="5"
            android:layout_marginTop="-5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="2"
            android:layout_gravity="center_horizontal"
            android:text="@string/_2b"/>
        
        <CheckBox
	        android:id="@+id/chk_2b"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="3"
            android:layout_marginTop="-5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_gravity="center_horizontal"
            android:text="@string/_3b"/>
        
	    <CheckBox
	        android:id="@+id/chk_3b"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5" 
            android:layout_marginTop="-5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="center_horizontal"
            android:text="@string/ss"/>
	
	    <CheckBox
	        android:id="@+id/chk_ss"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_marginTop="-5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="center_horizontal"
            android:text="@string/lf"/>
	    
	    <CheckBox
	        android:id="@+id/chk_lf"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_column="0"
	        android:layout_row="2"
            android:layout_marginTop="-5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_gravity="center_horizontal"
            android:text="@string/cf"/>
        
        <CheckBox
	        android:id="@+id/chk_cf"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_marginTop="-5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_row="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:text="@string/rf"/>
        
        <CheckBox
	        android:id="@+id/chk_rf"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_row="2"
            android:layout_marginTop="-5dp"/>

    </GridLayout>

    <Button
        android:id="@+id/save_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="@string/save" />

</LinearLayout>
