<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.rosehulman.baseballmanager.TeamSelectActivity" >

     <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="@string/welcome" />

    <TextView
        android:id="@+id/select_team_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/welcome_text"
        android:layout_centerHorizontal="true"
        android:text="@string/select_team" />

    <Button
        android:id="@+id/create_team_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/create_team" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/create_team_button"
        android:layout_below="@+id/select_team_text"
        android:layout_margin="30dp"
        android:background="@color/black">
        
		<FrameLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_margin="2dp"
		        android:background="@color/white">
		        
	        <ListView
	            android:id="@+id/listView1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	
	        </ListView>
        </FrameLayout>

    </FrameLayout>

</RelativeLayout>
